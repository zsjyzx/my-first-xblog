{% extends 'blog_base.html' %}

{% block extra_head %}
<link rel="stylesheet" href="//lab.lepture.com/editor/editor.css">
<script src="//lab.lepture.com/editor/editor.js"></script>
<script src="//lab.lepture.com/editor/marked.js"></script>
{% endblock %}

{% block content %}
<div class="container">
  <div class="publish center-block">
    <form action="" method="post">{% csrf_token %}
      {{ form.title }}
      {{ form.content }}
      {{ form.tags }}
      <button type="submit" class="btn btn-primary">发 布</button>
    </form>
  </div>
</div>
{% endblock %}

{% block scripts %}
<script type="text/javascript">
  var editor = new Editor();
  editor.render();
</script>
{% endblock %}
